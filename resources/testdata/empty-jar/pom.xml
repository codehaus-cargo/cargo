<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.codehaus.cargo</groupId>
    <artifactId>cargo-samples-testdata</artifactId>
    <version>0.9.1-SNAPSHOT</version>
  </parent>
  <artifactId>empty-jar</artifactId>
  <name>Cargo Empty JAR test data for samples</name>
  <packaging>jar</packaging>
  <scm>
    <connection>scm:svn:http://svn.codehaus.org/cargo/resources/trunk/testdata/empty-jar</connection>
    <developerConnection>scm:svn:https://svn.codehaus.org/cargo/resources/trunk/testdata/empty-jar</developerConnection>
    <url>http://svn.cargo.codehaus.org/cargo/resources/trunk/testdata/empty-jar</url> 
  </scm>
  <!-- We need this for now because Maven is not able to build from the top level without
       querying the remote repository. This is probably a Maven bug. Remove this when it
       is fixed -->
  <repositories>
    <repository>
      <id>codehaus.snapshots</id>
      <name>Codehaus Snapshots</name>
      <url>http://snapshots.repository.codehaus.org</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>codehaus</id>
      <name>Codehaus</name>
      <url>http://repository.codehaus.org</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>
</project>
