<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.codehaus.cargo</groupId>
    <artifactId>cargo-parent</artifactId>
    <version>4.11</version>
    <relativePath>../pom/pom.xml</relativePath>
  </parent>
  <artifactId>cargo-extensions</artifactId>
  <name>Cargo Extensions</name>
  <packaging>pom</packaging>
  <description>Cargo Extensions</description>
  <version>1.2.3</version>
  <properties>
    <!-- define these variables because of potentially different release cycles -->
    <cargo.resources.version>1.2.3</cargo.resources.version>
    <cargo.core.version>1.2.3</cargo.core.version>
  </properties>
  <scm>
    <connection>scm:svn:http://svn.codehaus.org/cargo/extensions/tags/cargo-extensions-1.2.3</connection>
    <developerConnection>scm:svn:https://svn.codehaus.org/cargo/extensions/tags/cargo-extensions-1.2.3</developerConnection>
    <url>http://svn.cargo.codehaus.org/cargo/extensions/tags/cargo-extensions-1.2.3</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <modules>
    <module>ant</module>
    <module>maven2</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-release-plugin</artifactId>
          <configuration>
            <autoVersionSubmodules>true</autoVersionSubmodules>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.codehaus.cargo</groupId>
            <artifactId>cargo-build-tools</artifactId>
            <version>${cargo.resources.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
