<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.codehaus.cargo</groupId>
    <artifactId>cargo-samples-maven2</artifactId>
    <version>1.4.8</version>
  </parent>
  <artifactId>cargo-sample-maven2-websphere-test-artifact</artifactId>
  <name>Cargo Samples - Maven 2 - WebSphere test</name>
  <packaging>jar</packaging>
  <description>Sample application that will be used to test the WebSphere container</description>

  <properties>
    <cargo.samples.servlet.port>9080</cargo.samples.servlet.port>
    <cargo.websphere.profile>AppSrv01</cargo.websphere.profile>
    <cargo.websphere.node>virtualbox-xpNode01</cargo.websphere.node>
    <cargo.websphere.cell>virtualbox-xpNode01Cell</cargo.websphere.cell>
    <cargo.websphere.server>server1</cargo.websphere.server>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>cargo-sample-java</artifactId>
      <version>${cargo.core.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>classpath-war</artifactId>
      <version>${cargo.resources.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>simple-ear</artifactId>
      <version>${cargo.resources.version}</version>
      <type>ear</type>
    </dependency>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>simple-jar</artifactId>
      <version>${cargo.resources.version}</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>simple-war</artifactId>
      <version>${cargo.resources.version}</version>
      <type>war</type>
    </dependency>
  </dependencies>

  <profiles>
    <!-- WebSphere 8.5.x -->
    <profile>
      <id>websphere85x</id>
      <activation>
        <property>
          <name>cargo.websphere85x.home</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.cargo</groupId>
            <artifactId>cargo-maven2-plugin</artifactId>
            <version>${project.version}</version>
            <configuration>
              <container>
                <containerId>websphere85x</containerId>
                <type>installed</type>
                <home>${cargo.websphere85x.home}</home>
                <dependencies>
                  <dependency>
                    <groupId>org.codehaus.cargo</groupId>
                    <artifactId>simple-jar</artifactId>
                  </dependency>
                </dependencies>
              </container>
              <configuration>
                <home>${cargo.websphere85x.home}/profiles/${cargo.websphere.profile}</home>
                <type>existing</type>
                <properties>
                  <cargo.java.home>${cargo.websphere85x.home}/java/jre</cargo.java.home>
                  <cargo.servlet.port>${cargo.samples.servlet.port}</cargo.servlet.port>
                  <cargo.websphere.profile>${cargo.websphere.profile}</cargo.websphere.profile>
                  <cargo.websphere.node>${cargo.websphere.node}</cargo.websphere.node>
                  <cargo.websphere.cell>${cargo.websphere.cell}</cargo.websphere.cell>
                  <cargo.websphere.server>${cargo.websphere.server}</cargo.websphere.server>
                </properties>
              </configuration>
              <deployables>
                <deployable>
                  <groupId>org.codehaus.cargo</groupId>
                  <artifactId>classpath-war</artifactId>
                  <type>war</type>
                </deployable>
                <deployable>
                  <groupId>org.codehaus.cargo</groupId>
                  <artifactId>simple-ear</artifactId>
                  <type>ear</type>
                </deployable>
                <deployable>
                  <groupId>org.codehaus.cargo</groupId>
                  <artifactId>simple-war</artifactId>
                  <type>war</type>
                </deployable>
              </deployables>
            </configuration>
            <executions>
              <execution>
                <id>start</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>start</goal>
                </goals>
              </execution>
              <execution>
                <id>stop</id>
                <phase>post-integration-test</phase>
                <goals>
                  <goal>stop</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <executions>
              <execution>
                <id>surefire-it</id>
                <phase>integration-test</phase>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <skip>${maven.test.skip}</skip>
                  <systemProperties>
                    <property>
                      <name>http.port</name>
                      <value>${cargo.samples.servlet.port}</value>
                    </property>
                  </systemProperties>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
