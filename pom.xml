  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

    <!--
      Use Derby 10.12.* as that is the latest branch compatible with Java 6.
      We use Java 6 for certain containers' tests on our CI.
      -->
    <cargo.derby.version>10.12.1.1</cargo.derby.version>
    <cargo.archetypes-junit.version>5.8.2</cargo.archetypes-junit.version>
    <!--
      The multiple-containers archetype relies on multiple profile activation conditions, which
      only works starting from Maven 3.2.2: https://issues.apache.org/jira/browse/MNG-4565

      Require Maven 3.2.3 so access to Maven Central is done via HTTPS.

      The Maven compiler plugin's version 3.9.0 onwards requires Maven 3.2.5.
      -->
    <maven.minimum.version>3.2.5</maven.minimum.version>
    <maven.antrun-plugin.version>3.1.0</maven.antrun-plugin.version>
    <maven.archetype-packaging.version>3.2.1</maven.archetype-packaging.version>
    <maven.compiler-plugin.version>3.10.1</maven.compiler-plugin.version>
    <maven.compiler-java.version>1.8</maven.compiler-java.version>
    <maven.dependency-plugin.version>3.3.0</maven.dependency-plugin.version>
    <maven.failsafe-plugin.version>2.22.2</maven.failsafe-plugin.version>
    <maven.surefire-plugin.version>2.22.2</maven.surefire-plugin.version>
    <maven.war-plugin.version>3.3.2</maven.war-plugin.version>
    <wildfly-swarm.version>2018.5.0</wildfly-swarm.version>
  </properties>

